{
  "name": "atomic-builder",
  "version": "8.0.0",
  "description": "An atomic front-end BEMIT framework",
  "author": "Jonathan Levaillant <jonathan.levaillant@outlook.com> (http://jonathanlevaillant.fr)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonathanlevaillant/atomic-builder.git"
  },
  "bugs": {
    "url": "https://github.com/jonathanlevaillant/atomic-builder/issues",
    "email": "jonathan.levaillant@outlook.com"
  },
  "keywords": [
    "framework",
    "sass",
    "css",
    "atomic design",
    "oocss",
    "bem",
    "bemit",
    "itcss",
    "vertical rhythm",
    "responsive"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "scss": "node-sass --output-style expanded --source-map true --source-map-contents true src/main.scss dist/main.css",
    "lint": "stylelint 'src/**/*.scss'",
    "prefix": "postcss -u autoprefixer -r dist/main.css",
    "minify": "cleancss --source-map --source-map-inline-sources -o dist/main.min.css dist/main.css",
    "compile": "npm-run-all lint scss prefix",
    "dev": "onchange 'src/**/*.scss' -- npm run compile --silent",
    "build": "npm-run-all clean compile minify",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.7",
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "postcss-cli": "^6.1.1",
    "rimraf": "^2.6.3",
    "stylelint": "^9.10.1",
    "stylelint-config-rational-order": "0.0.4",
    "stylelint-config-sass-guidelines": "^5.3.0"
  }
}
