{
  "name": "atomic-builder",
  "version": "8.0.0",
  "description": "Lightweight and flexible CSS front-end framework based on custom properties and built with Sass",
  "author": "Jonathan Levaillant <jonathan.levaillant@outlook.com> (http://jonathanlevaillant.fr)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonathanlevaillant/atomic-builder.git"
  },
  "bugs": {
    "url": "https://github.com/jonathanlevaillant/atomic-builder/issues",
    "email": "jonathan.levaillant@outlook.com"
  },
  "keywords": [
    "framework",
    "css",
    "sass",
    "bem",
    "itcss",
    "bemit",
    "responsive",
    "custom properties"
  ],
  "style": "dist/css/atomic-builder.css",
  "unpkg": "dist/css/atomic-builder.min.css",
  "files": [
    "dist",
    "scss"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "scss:main": "node-sass --output-style expanded --source-map true scss/atomic-builder.scss dist/css/atomic-builder.css",
    "scss:demo": "node-sass --output-style expanded --source-map true demo/scss/main.scss demo/dist/css/main.css",
    "lint:main": "stylelint 'scss/**/*.scss'",
    "lint:demo": "stylelint 'demo/scss/**/*.scss'",
    "prefix:main": "postcss -m -u autoprefixer -r dist/css/atomic-builder.css",
    "prefix:demo": "postcss -m -u autoprefixer -r demo/dist/css/main.css",
    "compile:main": "npm-run-all lint:main scss:main prefix:main",
    "compile:demo": "npm-run-all lint:demo scss:demo prefix:demo",
    "minify": "cleancss --source-map --source-map-inline-sources -o dist/css/atomic-builder.min.css dist/css/atomic-builder.css",
    "dev": "onchange 'scss/**/*.scss' 'demo/scss/**/*.scss' -- npm-run-all --parallel lint:main compile:demo --silent",
    "build": "npm-run-all clean compile:main minify",
    "prepare": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "clean-css-cli": "^4.3.0",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "postcss-cli": "^6.1.2",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "stylelint": "^10.0.1",
    "stylelint-config-prettier": "^5.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-sass-guidelines": "^6.0.0",
    "stylelint-prettier": "^1.0.6"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
